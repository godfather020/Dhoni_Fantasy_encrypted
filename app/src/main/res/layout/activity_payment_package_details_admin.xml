<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaymentPackageDetailsAdmin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Package List"
        android:textColor="@color/purple_700"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/lstPackage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/noPakImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="gone"
        android:background="@drawable/images__1_"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/noPacTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Package, Please Create New Package"
        android:textColor="@color/purple_700"
        android:layout_margin="16dp"
        android:visibility="gone"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/btnAddNewMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Add New Package" />

</LinearLayout>